            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->

    <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i> Thêm sản phẩm</h4>
                        <form class="form-horizontal style-form" action="/admin/add-product" method="post"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Tên sản phẩm</label>
                                <div class="col-sm-10">
                                    <input type="text" name="name" id="name" class="form-control"
                                        onchange="validation()" placeholder="Tên sản phẩm">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Giá</label>
                                <div class="col-sm-10">
                                    <input type="number" name="price" id="price" class="form-control" placeholder="Giá"
                                        onchange="validation()">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Mô tả</label>
                                <div class="col-sm-10">
                                    <textarea class="textarea" id="des" name="description" onchange="validation()"
                                        placeholder="Mô tả"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Nhãn hiệu</label>
                                <div class="col-sm-10">
                                    <input type="text" name="brand" id="brand" class="form-control"
                                        onchange="validation()" placeholder="Nhãn hiệu">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Thể loại</label>
                                <div class="col-sm-10">
                                    <select name="categoryID" class="form-control">
                                        {{#each data}}
                                        <option value="{{this._id}}">{{this.name}}
                                        </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Khối lượng tịnh</label>
                                <div class="col-sm-10">
                                    <input type="number" name="weigth" id="wei" class="form-control"
                                        onchange="validation()" placeholder="Khối lượng tịnh">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Thành phần</label>
                                <div class="col-sm-10">
                                    <textarea class="textarea" id="ing" name="ingredient" onchange="validation()"
                                        placeholder="Thành phần"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Hướng dẫn sử dụng</label>
                                <div class="col-sm-10">
                                    <textarea class="textarea" id="proMan" name="productManual" onchange="validation()"
                                        placeholder="Hướng dẫn sử dụng"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Cách bảo quản</label>
                                <div class="col-sm-10">
                                    <textarea class="textarea" id="pre" name="preserve" onchange="validation()"
                                        placeholder="Cách bảo quản"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Thời hạn sử dụng</label>
                                <div class="col-sm-10">
                                    <textarea class="textarea" id="exp" name="expirationDate" onchange="validation()"
                                        placeholder="Thời hạn sử dụng"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <p class="mt-5 text-center">
                                    <label for="attachment">
                                        <a class="btn btn-primary text-light" role="button" aria-disabled="false">+
                                            Thêm hình ảnh</a>
                                    </label>
                                    <input type="file" name="multi-files" accept="image/*" id="attachment"
                                        style="visibility: hidden; position: absolute;" multiple />

                                </p>
                                <p id="files-area">
                                    <span id="filesList">
                                        <span id="files-names"></span>
                                    </span>
                                </p>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="check" onchange="validation()">
                                    <p
                                        style="font-weight: bold; font-size: 15px; word-spacing: 0.3rem; text-decoration: underline;">
                                        Đồng ý thêm sản phẩm</p>
                                </label>
                            </div>
                            <div class="group-form">
                                <input disabled id="submit" type="submit" value="Thêm" class="btn-submit">
                            </div>
                        </form>
                    </div>
                </div><!-- col-lg-12-->
            </div><!-- /row -->





        </section>
        <! --/wrapper -->
    </section><!-- /MAIN CONTENT -->

    <!--main content end-->
