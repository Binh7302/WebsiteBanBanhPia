    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i> Cập nhật thông tin thể loại</h4>
                        <form class="form-horizontal style-form" action="/admin/{{data._id}}/edit-category" method="post"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Tên thể loại</label>
                                <div class="col-sm-10">
                                    <input type="text" name="name" id="name" class="form-control"
                                        onchange="validation()" placeholder="Tên thể loại" value="{{data.name}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="img_container">
                                    <div class="img_wrapper">
                                        <div class="image">
                                            <img class="img_here" src="{{data.image}}" alt="">
                                        </div>
                                        <div class="img_content">
                                            <div class="img_icon"><i class="fas fa-cloud-upload-alt"></i></div>
                                            <div class="img_text">Chưa có hình ảnh được chọn</div>
                                        </div>
                                        <div id="cancel-btn"><i class="fas fa-times"></i></div>
                                        <div class="img_filename">Tên hình ảnh</div>
                                    </div>
                                    <label for="file-upload" class="custom-file-upload">
                                        Chọn hình ảnh
                                    </label>
                                    <input name="image" id="file-upload" type="file"
                                        style="color:transparent; width:70px;">
                                </div>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="check" onchange="validation()">
                                    <p
                                        style="font-weight: bold; font-size: 15px; word-spacing: 0.3rem; text-decoration: underline;">
                                        Đồng ý cập nhật thông tin thể loại</p>
                                </label>
                            </div>
                            <div class="group-form">
                                <input disabled id="submit" type="submit" value="Cập nhật" class="btn-submit">
                            </div>
                        </form>
                    </div>
                </div><!-- col-lg-12-->
            </div><!-- /row -->





        </section>
        <! --/wrapper -->
