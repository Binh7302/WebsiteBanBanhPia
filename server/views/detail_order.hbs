                    </ul>
                </li>

            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->

    <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i> Cập nhật thông tin đơn hàng</h4>
                        <form class="form-horizontal style-form" action="/admin/{{data._id}}/edit-order" method="post"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-lg-2 col-sm-2 control-label">Tên khách hàng</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">{{data.name}}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 col-sm-2 control-label">Số điện thoại</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">{{data.phonenumber}}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 col-sm-2 control-label">Địa chỉ</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">{{data.address}}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 col-sm-2 control-label">Ngày tạo</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">{{data.createdAt}}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 col-sm-2 control-label">Tổng cộng</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">{{data.total}}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Trạng thái</label>
                                <div class="col-sm-10">
                                    <select name="statusID" class="form-control">
                                        {{#each status}}
                                        {{#if this.selected}}
                                        <option selected style="color: black;" value="{{this._id}}">{{this.name}}
                                        </option>
                                        {{else}}
                                        <option style="color: black;" value="{{this._id}}">{{this.name}}
                                        </option>
                                        {{/if}}
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="group-form">
                                <div class="row mt">
                                    <div class="col-lg-12">
                                        <div class="content-panel">
                                            <h4><i class="fa fa-angle-right"></i> Danh sách sản phẩm</h4>
                                            <section id="no-more-tables">
                                                <table class="table table-bordered table-striped table-condensed cf">
                                                    <thead class="cf">
                                                        <tr>
                                                            <th class="numeric">STT</th>
                                                            <th class="numeric">Tên sản phẩm</th>
                                                            <th class="numeric">Giá</th>
                                                            <th class="numeric">Số lượng</th>
                                                            <th class="numeric">Hình ảnh</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {{#each orderDetail}}
                                                        <tr>
                                                            <td class="numeric" data-title="STT">{{this.index}}</td>
                                                            <td class="numeric" data-title="Tên sản phẩm">
                                                                {{this.productID.name}}
                                                            </td>
                                                            <td class="numeric" data-title="Giá">{{this.pricePurchased}}
                                                            </td>
                                                            <td class="numeric" data-title="Số lượng">
                                                                {{this.quantityPurchased}}
                                                            </td>
                                                            <td class="numeric" data-title="Hình ảnh">
                                                                <img src="{{this.productID.avatarImage}}" width="150"
                                                                    height="100">
                                                            </td>
                                                        </tr>
                                                        {{/each}}
                                                    </tbody>
                                                </table>
                                            </section>
                                        </div><!-- /content-panel -->
                                    </div><!-- /col-lg-12 -->
                                </div><!-- /row -->
                            </div>
                            <div class="group-form">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="check" onchange="validation()">
                                        <p
                                            style="font-weight: bold; font-size: 15px; word-spacing: 0.3rem; text-decoration: underline;">
                                            Đồng ý cập nhật thông tin đơn hàng</p>
                                    </label>
                                </div>
                            </div>
                            <div class="group-form">
                                <input disabled id="submit" type="submit" value="Cập nhật" class="btn-submit">
                            </div>
                        </form>
                    </div>
                </div><!-- col-lg-12-->
            </div><!-- /row -->

        </section>
        <! --/wrapper -->
    </section><!-- /MAIN CONTENT -->

    <!--main content end-->
</section>
