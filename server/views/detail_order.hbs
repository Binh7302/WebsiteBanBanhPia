                    <a href="javascript:;">
                        <i class="fa fa-th"></i>
                        <span>Danh sách</span>
                    </a>
                    <ul class="sub">
                        <li><a href="/admin/product">Sản phẩm</a></li>
                        <li><a href="/admin/category">Thể loại</a></li>
                    </ul>
                </li>
                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-folder"></i>
                        <span>Biểu mẫu</span>
                    </a>
                    <ul class="sub">
                        <li><a href="/admin/add-product">Thêm sản phẩm</a></li>
                        <li><a href="/admin/add-category">Thêm thể loại</a></li>
                    </ul>
                </li>
                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-shopping-cart"></i>
                        <span>Đơn hàng</span>
                    </a>
                    <ul class="sub">
                        <li><a href="/admin/order-all">Tất cả</a></li>
                        <li><a href="/admin/order-processing">Đang xử lý</a></li>
                    </ul>
                </li>


                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class=" fa fa-bar-chart-o"></i>
                        <span>Thống kê</span>
                    </a>
                    <ul class="sub">
