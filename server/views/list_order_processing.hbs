    <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href='/assets/css/bootstrap.css' />
    <!-- Custom styles for this template -->
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/style-responsive.css" rel="stylesheet">
    <link href="/assets/css/table-responsive.css" rel="stylesheet">
</header>
<section id="container">
    <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
    <!--header start-->
    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="/admin/product" class="logo"><b>BANHPIALONGAN</b></a>
        <!--logo end-->
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li><a class="logout" href="/admin/logout-admin">Đăng xuất</a></li>
            </ul>
        </div>
    </header>
    <!--header end-->

    <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">

                <p class="centered"><a href="/admin/product"><img src="/images/logo@2xdone.png" class="img-circle"
                            width="150"></a></p>
                <h5 class="centered">banhpialongan.com</h5>

                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-th"></i>
                        <span>Danh sách</span>
                    </a>
                    <ul class="sub">
                        <li><a href="/admin/product">Sản phẩm</a></li>
                        <li><a href="/admin/category">Thể loại</a></li>
                    </ul>
                </li>
                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-folder"></i>
                        <span>Biểu mẫu</span>
                    </a>
                    <ul class="sub">
                        <li><a href="/admin/add-product">Thêm sản phẩm</a></li>
                        <li><a href="/admin/add-category">Thêm thể loại</a></li>
                    </ul>
                </li>
                <li class="sub-menu">
                    <a class="active" href="javascript:;">
                        <i class="fa fa-shopping-cart"></i>
                        <span>Đơn hàng</span>
                    </a>
                    <ul class="sub">
                        <li><a href="/admin/order-all">Tất cả</a></li>
                        <li class="active"><a href="/admin/order-processing">Đang xử lý</a></li>
                    </ul>
                </li>


                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class=" fa fa-bar-chart-o"></i>
                        <span>Thống kê</span>
                    </a>
                    <ul class="sub">
                        <li><a href="/admin/product-stat">Sản phẩm</a></li>
                    </ul>
                </li>

            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->

    <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="cont-search">
                <div class="input-box">
                    <form class="form-search" action="/admin/order-processing" method="post" enctype="multipart/form-data">
                        <i class="fa fa-search"></i>
                        <input class="search-input" type="text" placeholder="Nhập tên khách hàng" name="searchValue" value="{{searchValue}}" />
                        <button class="button">Tìm kiếm</button>
                    </form>
                </div>
            </div>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="content-panel">
                        <h4><i class="fa fa-angle-right"></i> Danh sách đơn hàng đang xử lý</h4>
                        <section id="no-more-tables">
                            <table class="table table-bordered table-striped table-condensed cf">
                                <thead class="cf">
                                    <tr>
                                        <th class="numeric">STT</th>
                                        <th class="numeric">Tên khách hàng</th>
                                        <th class="numeric">Số điện thoại</th>
                                        <th class="numeric">Địa chỉ</th>
                                        <th class="numeric">Tổng cộng</th>
                                        <th class="numeric">Trạng thái</th>
                                        <th class="numeric">Ngày tạo</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data}}
                                    <tr>
                                        <td class="numeric" data-title="STT">{{this.index}}</td>
                                        <td class="numeric" data-title="Tên khách hàng">{{this.name}}</td>
                                        <td class="numeric" data-title="Số điện thoại">{{this.phonenumber}}</td>
                                        <td class="numeric" data-title="Địa chỉ">{{this.address}}</td>
                                        <td class="numeric" data-title="Tổng cộng">{{this.total}}</td>
                                        <td class="numeric" data-title="Trạng thái">{{this.statusID.name}}</td>
                                        <td class="numeric" data-title="Ngày tạo">{{this.createdAt}}</td>
                                        <td>
                                            <form action="/admin/{{this._id}}/detail-order" method="get">
                                                <button class="btn-table edit" type="submit"></i>Sửa</button>
                                            </form>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </section>
                    </div><!-- /content-panel -->
                </div><!-- /col-lg-12 -->
            </div><!-- /row -->
            </div>
        </section>
        <! --/wrapper -->
    </section><!-- /MAIN CONTENT -->

    <!--main content end-->
</section>
